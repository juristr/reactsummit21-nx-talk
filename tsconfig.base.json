{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@reactcourses/courseitem": ["libs/courseitem/src/index.ts"],
      "@reactcourses/core": ["libs/core/src/index.ts"],
      "@reactcourses/admin/coupons": ["libs/admin/coupons/src/index.ts"],
      "@reactcourses/admin/sales": ["libs/admin/sales/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
